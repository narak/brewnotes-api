{
    "name": "brewnotes-api",
    "version": "0.1.0",
    "license": "UNLICENSED",
    "author": "Karan Sheth <karan.sheth@gmail.com>",
    "old_scripts": {
        "prestart": "yarn drop-db || true",
        "poststart": "yarn create-db"
    },
    "scripts": {
        "start": "yarn nodemon",
        "dev": "cross-env NODE_ENV=development node ./api/api.js",
        "nodemon": "nodemon --exec yarn dev",
        "lint": "eslint ./api/. ./config/. ./test/.",
        "prepush": "yarn",
        "pretest": "yarn lint",
        "production": "cross-env NODE_ENV=production node ./api/api.js",
        "coverage": "jest --coverage",
        "test": "jest",
        "test-ci": "jest --coverage --forceExit",
        "prettier:js": "prettier --write \"{api,config,test}/**/*.{js,json}\""
    },
    "jest": {
        "globals": {
            "__DEV__": true
        },
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "dependencies": {
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.18.2",
        "compression": "^1.7.3",
        "cors": "^2.8.4",
        "express": "^4.16.3",
        "express-routes-mapper": "1.0.2",
        "helmet": "^3.12.0",
        "jsonwebtoken": "^8.2.1",
        "mongoose": "^5.3.6",
        "morgan": "^1.9.1",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "cross-env": "^5.1.4",
        "eslint": "^5.7.0",
        "eslint-config-prettier": "^3.1.0",
        "eslint-plugin-import": "^2.11.0",
        "husky": "^1.1.2",
        "jest": "^23.6.0",
        "nodemon": "^1.17.3",
        "prettier": "^1.14.3",
        "shx": "^0.3.2",
        "supertest": "^3.0.0"
    }
}
